package claseU3;

import java.util.Scanner;

public class Figura1 {
	public static void main(String[] args) {
		int i,j,num;
		Scanner entrada = new Scanner(System.in);
		System.out.println("Numero de asteriscos a imprimir");
		num= entrada.nextInt();
		entrada.close();
		if (num>0) {
			for (i=1;i<=num;i++) {
				 for(j=1; j<=i;j++) {
				System.out.print("*");
			}
			System.out.println();
			}
		}

		}
}
