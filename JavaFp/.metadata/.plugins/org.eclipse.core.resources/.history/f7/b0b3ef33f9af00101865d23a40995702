package claseU3;

import java.util.Scanner;

public class H2E20 {

	public static void main(String[] args) {
		Scanner entrada= new Scanner(System.in);
		char opcion = 'a';	
		do {
			System.out.println("Â¿Desa salir s/n?");
			opcion = entrada.nextLine().charAt(0);
		} while (opcion!='S');
		System.out.println("Has salido");
	}

}
